pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('project2') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('project2') {
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'Packaging...'
                // Add packaging logic here if needed
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying...'
                // Add deployment logic here
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed.'
        }
    }
}
